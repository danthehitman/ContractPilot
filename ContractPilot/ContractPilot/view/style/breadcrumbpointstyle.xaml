<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:map="clr-namespace:MapControl;assembly=MapControl.WPF">
  <Style x:Key="BreadcrumbPointStyle" TargetType="{x:Type map:MapItem}">
    <Setter Property="map:MapItem.Location" Value="{Binding Location}" />
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type map:MapItem}">
          <Canvas>
            <Ellipse Width="10" Height="10" Fill="#FF0000FF" Canvas.Left="-5" Canvas.Top="-5" />
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>