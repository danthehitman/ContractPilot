<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="{x:Type Label}" TargetType="{x:Type Label}">
    <Setter Property="Background" Value="#FFD3D3D3" />
  </Style>
  <Style x:Key="MakeModelInfoInputLabelStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
    <Setter Property="Width" Value="80" />
    <Setter Property="Height" Value="25" />
    <Setter Property="HorizontalContentAlignment" Value="Right" />
  </Style>
  <Style x:Key="MakeModelInfoInputTextBoxStyle" TargetType="{x:Type TextBox}">
    <Setter Property="Width" Value="200" />
    <Setter Property="Height" Value="25" />
  </Style>
  <Style x:Key="MakeModelInfoInputComboBoxStyle" TargetType="{x:Type ComboBox}">
    <Setter Property="Width" Value="200" />
    <Setter Property="Height" Value="25" />
  </Style>
</ResourceDictionary>